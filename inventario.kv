<ContentNavigationDrawer>:
    ScrollView:

        MDList:

            OneLineListItem:
                text: 'Tela Principal'
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "principal"

            OneLineListItem:
                text: "Tela 2"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "tela_2"


Screen:
    name: 'tela1'

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Invent√°rio"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]



    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            Principal:
                name: "principal"

            Tela2:
                name: "tela_2"


        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer


<MDTextField>
    size_hint: (.1, .1)
    mode: "rectangle"
    font_size: 20
    #line_color_normal: [0,0,0,1]
    text_color_normal: 0, 0, 0, 1
    text_color_focus: 0, 0, 0, 1
    write_tab: False



<Principal>:

    MDRectangleFlatButton:
        size_hint: .80, .68
        pos_hint: {'x': .1, 'y': .2}
        text_color: (36/255,100/255,203/255,1)
        #line_color: 1, 1, 1, 1
        #md_bg_color: 1, 1, 1, 1
        ripple_scale: 0


    MDSwiper:
        id: swiper
        size_hint_y: None
        height: root.height
        width: root.width

        MDSwiperItem:










