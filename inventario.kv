<ContentNavigationDrawer>:
    ScrollView:

        MDList:

            OneLineListItem:
                text: 'Tela Principal'
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "principal"

            OneLineListItem:
                text: "Pesquisar"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "pesquisar"


Screen:
    name: 'tela1'

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Inventário"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]



    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            TelaPesquisa:
                name: "pesquisar"

            Principal:
                name: "principal"




        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer




<Image>
    source: 'image2.jpg'
    allow_stretch: True
    keep_ratio: False

<Principal>:
    on_enter:
        root.inserir()

    Image:
        size_hint: (1, .915)

    MDRectangleFlatButton:
        size_hint: .80, .68
        pos_hint: {'x': .1, 'y': .2}
        text_color: (36/255,100/255,203/255,1)
        #line_color: 1, 1, 1, 1
        md_bg_color: 1, 1, 1, 1
        ripple_scale: 0

    MDRectangleFlatButton:
        size_hint: .40, .1
        text: 'Gravar'
        font_size: 20
        pos_hint: {'x': .3, 'y': .05}
        text_color: 1, 1, 1, 1
        line_color: 1, 1, 1, 1
        md_bg_color: (33/255,150/255,243/255,1)
        on_press:
            root.gravar()

    MDSwiper:
        id: swiper
        size_hint_y: None
        height: root.height
        width: root.width

        MDSwiperItem:



<TelaPesquisa>:

    FloatLayout:
        size_hint: (1, .915)

        Image:

        MDRectangleFlatButton:
            size_hint: .80, .68
            pos_hint: {'x': .1, 'y': .2}
            text_color: (36/255,100/255,203/255,1)
            #line_color: 1, 1, 1, 1
            md_bg_color: 1, 1, 1, 1
            ripple_scale: 0

        MDTextField:
            id: descricao
            mode: 'rectangle'
            hint_text: 'Descrição'
            pos_hint: {'x': .3, 'y': .75}
            size_hint: .4, .1
            write_tab: False

        MDTextField:
            mode: 'rectangle'
            hint_text: 'Nº Imobilizado'
            pos_hint: {'x': .3, 'y': .6375}
            size_hint: .4, .1
            write_tab: False

        MDTextField:
            id: classe
            text: 'IES-20'
            mode: 'rectangle'
            hint_text: 'Classe'
            pos_hint: {'x': .3, 'y': .525}
            size_hint: .4, .1
            write_tab: False

        MDTextField:
            id: num_invent
            mode: 'rectangle'
            hint_text: 'Nº Inventário'
            pos_hint: {'x': .3, 'y': .4125}
            size_hint: .4, .1
            write_tab: False

        MDTextField:
            id: data_ini
            text: '01/01/2009'
            mode: 'rectangle'
            hint_text: 'Data Inicial'
            pos_hint: {'x': .2, 'y': .28}
            size_hint: .21, .1
            write_tab: False

        MDTextField:
            id: data_fim
            text: '31/12/2010'
            mode: 'rectangle'
            hint_text: 'Data Final'
            pos_hint: {'x': .59, 'y': .28}
            size_hint: .21, .1
            write_tab: False

        MDRectangleFlatButton:
            size_hint: .40, .1
            text: 'Pesquisar'
            font_size: 20
            pos_hint: {'x': .3, 'y': .05}
            text_color: 1, 1, 1, 1
            line_color: 1, 1, 1, 1
            md_bg_color: (33/255,150/255,243/255,1)
            on_press:
                root.buscar()







